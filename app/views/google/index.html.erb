<%= stylesheet_link_tag 'google'%>

<div class="modal" id="loader">

</div>

<div class="search-field">
  <%= form_tag(google_path, :method => "get" ) do %>

    <div class="location-start">
      <%= label_tag "From" %>
      <%= text_field_tag :start_location, params[:start_location], class: "input-field", id: "autocomplete", placeholder: "Start location", type:"text" %>

        <button type="button" name="button" class='get-location-data location-button' id="start-location-gps"><%= image_tag "location.svg" %></button>

    </div>

    <div class="location-end">
      <%= label_tag "To" %>
      <%= text_field_tag :end_location, params[:end_location], class: "input-field", id: "autocomplete2", placeholder: "Destination", type:"text" %>

        <button type="button" name="button" class='get-location-data location-button' id="destination-gps"><%= image_tag "location.svg" %></button>
      
    </div>


    <%= submit_tag "Search", class: "submit"%>

   <% end %>

<div class="welcome-message">
  <%= image_tag "bg02.svg" %>
</div>

</div>
<p id="total"></p>

<div class="map-and-filter">
  <div class="filters">
  	<form>
      <h2>Filters</h2>
  		<div class="filter-criteria">
  			<h3>Capacity</h3>
  			<h5>
          <label><input type="radio" name="capacity" value="2">2</label>
          <label><input type="radio" name="capacity" value="4">4</label>
          <label><input type="radio" name="capacity" value="6">6</label>
        </h5>
          <button type="button" class="submit" id="streetview_button" name="button" onclick="showstreetview()">Change View</button>
          <button type="button" class="submit" id='reset_filters' name="button">Reset Filters</button>
  		</div>
  	</form>

  </div>
  <div id="map" style="display: none"></div>
</div>


<div class="result" id="div_result">

</div>
<iframe id="streetview_iframe"
style="display:none"
  width="100%"
  height="250">
</iframe>

  <%= javascript_include_tag 'google'%>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDxHtxeT7TcaPqz8y2tPRWbqIwB9ROdZfk&libraries=places&callback=initAutocomplete"></script>
