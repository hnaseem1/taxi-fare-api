<div class="new_session">
	<%= form_for :session, url: sessions_path do |f| %>
		<%= image_tag "icon_signup_dude.png", class: "icon_dude" %>
		<p>
			<%= f.email_field :email, placeholder: "Email", class: 'emailField' %>
		</p>

		<p>
			<%= f.password_field :password, placeholder: "password", class: 'passwordField' %>
		</p>

		<%= f.submit 'login', class: "submit" %>
	<% end %>

	<% if flash[:error] %>
	<p id="flasherror" style="display:none">
		<%= flash[:error] %>
	<% end %>
</p>
	<%= link_to "Forgot Password?", new_resets_path %>
</div>
