<div class="new_session">

	<%= form_for :session, url: sessions_path, :html => { :id => "formfor"} do |f| %>

		<h2>Login</h2>

		<%= f.label :email %>
		<%= f.email_field :email, class: 'input-field', autocomplete: 'email', id: 'inputemail'%>

		<%= f.label :password %>
		<%= f.password_field :password, class: 'input-field', autocomplete: 'password', id: 'inputpassword' %>

		<%= link_to "Forgot Password?", new_resets_path, class: 'forget_password' %>

		<%= f.submit 'login', class: "submit", id: 'newsessionbutton' %>
	<% end %>


</div>
